- model: sites.Site
  pk: 1
  fields:
    name: 'University of Oxford SSO'
    domain: '<%= @server_name %>'

- model: idm_auth.User
  pk: 5090ed84-6e55-11e7-986f-7cd1c3e4b46b
  fields:
    identity_id: 4ff517c5-532f-42ee-afb1-a5d3da2f61d5
    username: api/<%= scope.lookupvar('idm::auth_server_name') %>
    primary: true

- model: oidc_provider.Client
  pk: 1
  fields:
    name: 'University of Oxford Identity Self-Service'
    client_id: <%= scope.lookupvar('idm::core_oidc_client_id') %>
    client_secret: <%= scope.lookupvar('idm::core_oidc_client_secret') %>
    response_type: code
    _redirect_uris: https://<%= scope.lookupvar('idm::core_server_name') %>/oidc/complete/
    client_type: confidential
    jwt_alg: RS256
    require_consent: false
    date_created: 1970-01-01T00:00:00

- model: oidc_provider.Client
  pk: 2
  fields:
    name: 'University of Oxford Card Management'
    client_id: <%= scope.lookupvar('idm::card_oidc_client_id') %>
    client_secret: <%= scope.lookupvar('idm::card_oidc_client_secret') %>
    response_type: code
    _redirect_uris: https://<%= scope.lookupvar('idm::card_server_name') %>/oidc/complete/
    client_type: confidential
    jwt_alg: RS256
    require_consent: false
    date_created: 1970-01-01T00:00:00

